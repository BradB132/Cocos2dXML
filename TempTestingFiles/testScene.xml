<?xml version="1.0" encoding="UTF-8" ?>
<Scene onLoad="doSetup" onUpdate="doUpdate">
	
	<Accelerometer id="accel"/>
	
	<Node id="platforms">
		<Sprite anchorPoint=".5,.5" texture="platform.png"/>
		<Sprite anchorPoint=".5,.5" texture="platform.png"/>
		<Sprite anchorPoint=".5,.5" texture="platform.png"/>
		<Sprite anchorPoint=".5,.5" texture="platform.png"/>
	</Node>
	
	<Sprite id="hero" position="160,480" anchorPoint=".5,.8" texture="hero.png"/>
	
	<Node id="touchNode" size="320,480" onTouchDown="touchDown" onTouchMove="touchMove" onTouchUp="touchUp" onTouchCancel="touchUp"/>
	
	<SpriteBatch texture="hurdle.png" plist="hurdle.plist">
		<BatchedSprite id="hurdleMan" texture="frame1.png" onTouchUp="playHurdle" />
	</SpriteBatch>
	<Animation target="hurdleMan" startListener="playHurdle" format="frame#.png" sequence="1-11,10-1" fps="20" loops="2"/>
	
	<!-- Variables and scripting -->
	<Float id="horizontalJumpSpeed" />
	<Float id="touchCount" />
	<Bool id="isGripping"/>
	<Script path="setup.noplb" runListener="doSetup"/>
	<Script path="update.noplb" runListener="doUpdate"/>
	<Script path="touchDown.noplb" runListener="touchDown"/>
	<Script path="touchMove.noplb" runListener="touchMove"/>
	<Script path="touchUp.noplb" runListener="touchUp"/>
	
</Scene>